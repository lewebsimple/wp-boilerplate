{
  "name": "lewebsimple/wp-boilerplate",
  "description": "WordPress project",
  "version": "0.1.11",
  "type": "project",
  "license": "MIT",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://satis.ledevsimple.ca"
    }
  ],
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "post-create-project-cmd": [
      "sed -i -e \"s/wp-boilerplate/${PWD##*/}/g\" composer.json .gitignore",
      "mkdir -p wp-content/plugins wp-content/themes wp-content/uploads",
      "wp core download --force --skip-content --quiet",
      "wp core config --dbname=wp_${PWD##*/} --quiet",
      "wp core install --url=${PWD##*/}.ledevsimple.ca --title=${PWD##*/} --quiet",
      "wp language core install fr_CA --quiet",
      "wp site switch-language fr_CA --quiet",
      "wp plugin activate wp-cfm --quiet",
      "wp config pull all --quiet",
      "git init && git add -A && git commit -am 'Initial WordPress project'"
    ],
    "post-install-cmd": [
      "wp language core update --quiet",
      "wp language plugin update --all --quiet"
    ]
  },
  "require": {
    "wpackagist-plugin/loco-translate": "*",
    "wpackagist-plugin/redirection": "*",
    "wpackagist-plugin/safe-svg": "*",
    "wpackagist-plugin/user-switching": "*",
    "wpackagist-plugin/wp-cfm": "*"
  }
}