{
  "name": "lewebsimple/wp-boilerplate",
  "description": "WordPress project",
  "version": "0.3.0",
  "type": "project",
  "license": "MIT",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://satis.ledevsimple.ca"
    }
  ],
  "prefer-stable": true,
  "config": {
    "platform": {
      "php": "7.4"
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "post-create-project-cmd": [
      "sed -i -e \"s/wp-boilerplate/${PWD##*/}/g\" composer.json .gitignore",
      "mkdir -p wp-content/plugins wp-content/themes wp-content/uploads",
      "wp core download --force --skip-content",
      "@db-create",
      "@core-init",
      "@git-init"
    ],
    "core-init": [
      "wp core config --dbname=wp_${PWD##*/}",
      "wp core install --url=${PWD##*/}.ledevsimple.ca --title=${PWD##*/}"
    ],
    "db-create": [
      "mysql -e \"CREATE DATABASE IF NOT EXISTS wp_${PWD##*/}\""
    ],
    "git-init": [
      "git init && git add -A && git commit -am 'Initial WordPress project'"
    ]
  },
  "require": {
    "lewebsimple/acf-extended-pro": "*",
    "lewebsimple/acf-polylang": "*",
    "lewebsimple/advanced-custom-fields-pro": "*",
    "lewebsimple/gravity-forms-polylang": "*",
    "lewebsimple/gravityforms": "*",
    "lewebsimple/ithemes-security-pro": "*",
    "lewebsimple/js_composer": "*",
    "lewebsimple/kaliroots": "*",
    "lewebsimple/polylang-pro": "*",
    "lewebsimple/polylang-wc": "*",
    "lewebsimple/theia-smart-thumbnails-premium": "*",
    "lewebsimple/wp-offload-ses": "*",
    "lewebsimple/wp-rocket": "*",
    "wpackagist-plugin/acf-better-search": "*",
    "wpackagist-plugin/autodescription": "*",
    "wpackagist-plugin/clean-image-filenames": "*",
    "wpackagist-plugin/disable-comments": "*",
    "wpackagist-plugin/disable-dashboard-for-woocommerce": "*",
    "wpackagist-plugin/enable-media-replace": "*",
    "wpackagist-plugin/ewww-image-optimizer": "*",
    "wpackagist-plugin/hide-updates": "*",
    "wpackagist-plugin/loco-translate": "*",
    "wpackagist-plugin/redirection": "*",
    "wpackagist-plugin/safe-svg": "*",
    "wpackagist-plugin/user-switching": "*",
    "wpackagist-plugin/woocommerce": "*"
  }
}
